<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="CALCULADORA\nDE CONVERSIÓN"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        />

    <Spinner
        android:id="@+id/spinnerTipoConversion"
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35sp"
        android:layout_marginHorizontal="50sp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/valorParaConvertir"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey"
        android:hint="Inserte un valor"
        android:textAlignment="center"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerTipoConversion"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:editable="false"
        android:focusableInTouchMode="false"
        />

    <EditText
        android:id="@+id/valorConvertido"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey"
        android:hint="Inserte un valor"
        android:textAlignment="center"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerTipoConversion"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:editable="false"
        android:focusableInTouchMode="false"
        />

    <Spinner
        android:id="@+id/spinnerValorInicial"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/valorParaConvertir"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="25sp"
        android:textAlignment="center"
        />

    <Spinner
        android:id="@+id/spinnerValorFinal"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/valorConvertido"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="25sp"
        android:textAlignment="center"
        />


    <GridLayout
        android:columnCount="4"
        android:rowCount="4"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/siete"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="7"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/ocho"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/ocho"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="8"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/nueve"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="9"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/intercambiar"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:text="⇆"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/cuatro"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="4"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/cinco"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/cinco"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="5"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/seis"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="6"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/mas_menos"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:text="+/-"
            android:textSize="20dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/uno"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/dos"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="2"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/tres"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="3"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/borrarTodo"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:text="AC"
            android:textSize="20dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:id="@+id/punto"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text=","
            android:textSize="30dp"
            />
        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:id="@+id/cero"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="0"
            android:textSize="30dp"
            />
        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/eliminarUltDigit"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/white"
            android:text="⌫"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/igual"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:text="="
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>